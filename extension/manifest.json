{
  "manifest_version": 3,
  "name": "DF-Auto Sim",
  "version": "2.5.0",
  "description": "Dealers Face - Facebook Marketplace automation for auto dealers",
  "author": "Dealers Face",
  "permissions": [
    "storage",
    "sidePanel",
    "tabs",
    "activeTab",
    "scripting",
    "alarms",
    "cookies",
    "identity"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://m.facebook.com/*",
    "https://web.facebook.com/*",
    "https://dealersface.com/*",
    "https://fmd-production.up.railway.app/*",
    "http://localhost:5000/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    },
    "default_title": "DF-Auto Sim"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "side_panel": {
    "default_path": "sidepanel-ai.html"
  },
  "background": {
    "service_worker": "background-ai.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*", "https://m.facebook.com/*", "https://web.facebook.com/*"],
      "js": ["content-ai.js"],
      "run_at": "document_idle"
    }
  ],
  "oauth2": {
    "client_id": "505778791605869",
    "scopes": ["email", "public_profile"]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://www.facebook.com/*", "https://web.facebook.com/*"]
    }
  ]
}
