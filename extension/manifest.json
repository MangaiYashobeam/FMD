{
  "manifest_version": 3,
  "name": "DealersFace Pro",
  "version": "3.1.0",
  "description": "DealersFace - Professional Facebook Marketplace automation for auto dealers with IAI Soldier",
  "author": "Dealers Face",
  "permissions": [
    "storage",
    "sidePanel",
    "tabs",
    "activeTab",
    "scripting",
    "alarms",
    "cookies",
    "identity"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://m.facebook.com/*",
    "https://web.facebook.com/*",
    "https://dealersface.com/*",
    "http://localhost:5000/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    },
    "default_title": "Open DealersFace Pro"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "side_panel": {
    "default_path": "sidepanel-ai.html"
  },
  "background": {
    "service_worker": "background-ai.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*", "https://m.facebook.com/*", "https://web.facebook.com/*"],
      "js": ["iai-soldier.js", "content-ai.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js", "iai-soldier.js"],
      "matches": ["https://www.facebook.com/*", "https://web.facebook.com/*", "https://m.facebook.com/*"]
    }
  ]
}
