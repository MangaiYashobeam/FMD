{
  "manifest_version": 3,
  "name": "FMD Training Recorder - Super Admin",
  "version": "2.1.1",
  "description": "Records DOM interactions for IAI/Soldier training - Super Admin Console",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "clipboardWrite",
    "sidePanel"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "https://m.facebook.com/*",
    "https://dealersface.com/*",
    "http://localhost:*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://facebook.com/*",
        "https://m.facebook.com/*"
      ],
      "js": ["recorder.js"],
      "css": ["recorder.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_icon": "icons/icon.svg",
    "default_title": "Open Training Console"
  },
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["recorder.js", "sidebar.html", "sidebar.css", "sidebar.js"],
      "matches": ["https://*.facebook.com/*"]
    }
  ]
}
